<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/root"
        android:orientation="horizontal"
        android:padding="8dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".ui.dialogs.AddMainDialog">

        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:iconPadding="8dp"
            android:layout_margin="8dp"
            android:backgroundTint="@color/black_shade"
            app:iconTint="?attr/colorSecondary"
            android:id="@+id/add_category_btn"
            android:textAllCaps="false"
            app:iconGravity="textTop"
            app:icon="@drawable/ic_category"/>

        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:textAllCaps="false"
            android:backgroundTint="@color/black_shade"
            app:iconTint="?attr/colorSecondary"
            android:id="@+id/add_sub_category_btn"
            app:iconGravity="textTop"
            app:icon="@drawable/ic_sub_category"/>

        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:layout_margin="8dp"
            android:id="@+id/add_image_btn"
            android:backgroundTint="@color/black_shade"
            app:iconTint="?attr/colorSecondary"
            app:iconGravity="textTop"
            app:icon="@drawable/ic_image"/>

    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>